                +createInfo(profile.info.birthday)
            .col-6.col-xl-8.col-lg-6.col-md-6.center.primaryTopMargin.p-0
                +createInfo(profile.info.Education)
                    
                

mixin displayLanguages(languages)
    .col-lg-12
        .row.justify-content-center
            .col-lg-12
                h1.center Languages
            each val, language in languages
                .col-md-6.col-lg-12.col-xl-6.p-0.pr-xl-4.pr-md-4
                    .primaryTopMargin.col-12.p-0(style = "display: inline-flex")
                        h2.p-0 #{language}
                        img(src = `${val.flag}` alt = " ").svg-flag
                    .thirdTopMargin
                        each rate, i in val.description
                            .col-12.p-0
                                h3 #{i}
                            +ballChart(rate)

mixin blockChart(chartTitle, dataSet, options = {"width": ""})
    .col-lg-12.p-0
        .row.justify-content-center
            .col-lg-12
                h1.center.primaryBottomMargin #{chartTitle}
        .row.justify-content-around
            .col-lg-12(style = "display: contents")
                - const collumn_spacing = 100 / Object.keys(dataSet).length
                each val, language in dataSet
                    .col-auto.p-0(style = `width: ${options.width || (collumn_spacing - collumn_spacing * .15).toString() + "%"}`)
                        .thirdTopMargin
                            each rate, i in val
                                .col-12.p-0
                                    +blockRow(rate)
                        .thirdTopMargin.col-12.p-0.center
                            h3.p-0.center #{language}

mixin blockRow(rate)
    - const maxRate = 10
    .col.p-0
        if rate > maxRate || rate < 0
            h2 Wrong Rate Value!
        else
            - for (var ball = 0; ball < maxRate; ball++)
                if ball < maxRate - rate
                    .blockChartEmpty
                else
                    .blockChartFull

mixin ballChart(rate)
    - const maxRate = 10
    .col.p-0(style="display: inline-block;")
        if rate > maxRate || rate < 0
            h2 Wrong Rate Value!
        else
            - for (var ball = 0; ball < maxRate; ball++)
                if ball < rate
                    .ballChartFull.p-1
                else
                    .ballChartEmpty.p-1